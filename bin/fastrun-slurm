#!/bin/bash

# PARSE ARGUMENTS

show_help ()
{
  echo "Usage:

  ${0##*/} [-h][-H HOSTFILE][-n numprocs] executable

Options:

  -h, --help
    display this help and exit

  -H, --hostfile
    file containing hostnames/IPs of compute nodes

  -n, --numproc
    number of processes
  "
}

EXECUTABLE=${@: -1}

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -H|--hostfile)
    HOSTFILE="$2"
    shift # past argument
    shift # past value
    ;;
    -n|--numproc)
    export GAM_CARDINALITY="$2"
    shift # past argument
    shift # past value
    ;;
    -h|--help)
	show_help
	exit
    ;;
    *)    # unknown option
    POSITIONAL+=("$1") # save it in an array for later
    shift # past argument
    ;;
esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

DIRECTORY=`dirname $0`

echo "running $EXEC on $SLURM_NODELIST"

export HOSTS=`scontrol show hostnames $SLURM_NODELIST`
echo $HOSTS

export GAM_LOG_PREFIX=$PWD/logs
export TASK_COUNT=`expr $GAM_CARDINALITY - 1`
export BASE_PAP=6100
export BASE_MEM=6228
export BASE_DMN=6356

for i in `eval echo {0..$TASK_COUNT}`
do
	IDX=`expr $i + 1`
	HOST=`echo $HOSTS | cut -d " " -f $IDX`
	export GAM_NODE_$i=$HOST
	export GAM_SVC_PAP_$i=$BASE_PAP
	export GAM_SVC_MEM_$i=$BASE_MEM
	export GAM_SVC_DMN_$i=$BASE_DMN
done

cat <<EOT >> commands.conf
0-$TASK_COUNT  bash -c '$DIRECTORY/fastnode_slurm $EXEC'
EOT

srun --export=ALL -N$GAM_CARDINALITY --ntasks-per-node=1 -l --multi-prog commands.conf
rm commands.conf


