#!/bin/bash

# PARSE ARGUMENTS

EXECUTABLE=${@: -1}

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -H|--hostfile)
    HOSTFILE="$2"
    shift # past argument
    shift # past value
    ;;
    -n|--numproc)
    export GAM_CARDINALITY="$2"
    shift # past argument
    shift # past value
    ;;
    *)    # unknown option
    POSITIONAL+=("$1") # save it in an array for later
    shift # past argument
    ;;
esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

DIRECTORY=`dirname $0`
export GAM_LOG_PREFIX=$PWD/logs

echo "running $EXECUTABLE on:"
echo "`cat hosts`"
echo "================="

mpirun -x LD_LIBRARY_PATH -x GAM_LOG_PREFIX -x GAM_CARDINALITY --machinefile $HOSTFILE --pernode --tag-output -n $GAM_CARDINALITY $DIRECTORY/fastnode-mpi $EXECUTABLE
